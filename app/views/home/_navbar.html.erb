<div id="header">
  <% if signed_in? -%>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">CoolStay</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= form_for :listing, url: global_search_path, method: :get do |f| %>
            <%= f.text_field :term, list: "list", placeholder: "search field" %>
            <datalist id="list"></datalist>
            <%= f.submit "Go", data: { disable_with: false }%>
            <% end -%>
          </li>
          <li class="nav-item active">
            <%= link_to 'Explore Now', controller: 'listings'%>
          </li>
          <li class="nav-item active">
            <%= link_to 'New listing', new_listing_path %>
          </li>
          <li class="nav-item active">
            <%= link_to 'Edit Profile', user_profile_path(current_user.id) %>
          </li>
          <li class="nav-item active">
            <%= link_to t(".sign_out"), sign_out_path, method: :delete %>
          </li>
        </ul>
      </div>
    </nav>
  <% else -%>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">CoolStay</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to 'Explore Now', controller: 'listings'%>
        </li>
        <li class="nav-item active">
          <%= link_to t(".sign_in"), sign_in_path, method: :get %>
        </li>
      </ul>
    </div>
  </nav>
</div>
<% end -%>
