<div id="clearance" class="sign-up">

  <%= form_for @user do |form| %>

  <div id="clearance" class="form-group">
    <div class="login-popup-wrap new_login_popup">
      <div class="login-popup-heading text-center">
        <h2>Update Your Profile</h2>
          <div class="form-group text-center">
            <%= form.label :full_name %>
            <%= form.text_field :full_name, type: 'name', class: "form-control" %>
          </div>

          <div class="form-group text-center">
            <%= form.label :email %>
            <%= form.text_field :email, type: 'email', class: "form-control" %>
          </div>
          <div class="password-field text-center">
            <%= form.label :password %>
            <%= form.password_field :password, class: "form-control" %>
          </div>
          <div>
            <%= form.file_field :avatar %>
          </div>

            <%= form.submit class:"btn btn-primary login-popup-btn"%>
            <div class="text-center">
              Already have an account? <%= link_to "Sign In", sign_in_path %>
            </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
