<div id="clearance" class="form-group">
  <div class="login-popup-wrap new_login_popup">
    <div class="login-popup-heading text-center">
      <h4><i class="fa fa-lock" aria-hidden="true"></i> Login </h4>
    </div>
      <%= form_for :session, id:"loginMember", role: "form", action: "", method: "post", url: session_path do |form| %>
        <div class="form-group">
          <%= form.text_field :email, type: 'email', id: "user_id", class: "form-control", placeholder: "e-mail / Mobile no" %>
        </div>
        <div class="form-group" id="exampleInputPassword1">
          <%= form.password_field :password, class: "form-control"  %>
        </div>
        <button type="submit" class="btn btn-default login-popup-btn" name="submit" value="1">Login</button>
        <div class="other-links">
        <%= link_to "Google Sign In", "/auth/google_oauth2", class:"btn btn-danger login-popup-btn" %>

        <div class="form-group text-center">
          <a class="pwd-forget" href="javascript:void(0)" id="open_forgotPassword">Forget Password</a>
        </div>
        <% if Clearance.configuration.allow_sign_up? %>
          <div class="text-center">
            Not registered yet? <%= link_to "Click Here", sign_up_path %>
          </div>
      <% end %>
    <% end %>
  </div>
</div>
