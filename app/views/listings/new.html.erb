<%= render 'shared/navbar_no_search' %>
<h3>New Listing form</h3>
<%= form_with model: @listing, url: listings_path, local: true do |form| %>
<% if @listing.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@listing.errors.count, "error") %> prohibited
      this listing from being saved:
    </h2>
    <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="create_listing">
  <form>
    <div class="form-group">
      <%= form.label :property_title, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :property_title, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :location, class: "col-sm-1 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :location, class:"form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :country, class: "col-sm-1 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :country, class:"form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :price, class: "col-sm-1 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :price, class:"form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "col-sm-1 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :description, class:"form-control"  %>
      </div>
    </div>

    <div class='align_center'>
      <%= form.file_field :photos, multiple: true, class:"file-uploader" %><br><br>
      <%= form.submit class:"btn btn-primary" %>
    </div>

  </form>
</div>
<% end %>
